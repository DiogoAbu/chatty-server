{
  "name": "chatty-server",
  "version": "0.0.0",
  "private": true,
  "main": "dist",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist",
    "build": "tsc",
    "predev": "docker run --name postgres_dev --env-file .env -p 5432:5432 -v postgres_dev:/var/lib/postgresql/data --restart always -d postgres:11-alpine || docker start postgres_dev || exit 0",
    "dev": "wait-on tcp:5432 && ts-node-dev -r tsconfig-paths/register --respawn --transpileOnly src",
    "test": "echo \"No test specified\" && exit 0",
    "eslint": "eslint . --ext .ts,.tsx,.js --max-warnings 0 --config ./.eslintrc",
    "prettier": "prettier **/*.json --config ./.prettierrc",
    "lint": "yarn eslint && yarn prettier",
    "lint-fix": "yarn eslint --fix && yarn prettier --write",
    "fix-lockfile": "node ./scripts/fix-lockfile.js",
    "postinstall": "patch-package"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn fix-lockfile && lint-staged && yarn test --forceExit --silent --onlyChanged",
      "post-commit": "git update-index --again",
      "pre-push": "git fetch --prune origin \"+refs/tags/*:refs/tags/*\""
    }
  },
  "lint-staged": {
    "*.{j,t}s{,x}": "eslint --config ./.eslintrc --cache --fix",
    "*.json": "prettier --config ./.prettierrc --write"
  },
  "dependencies": {
    "accesscontrol": "^2.2.1",
    "apollo-server": "^2.13.1",
    "bcrypt": "^4.0.1",
    "class-validator": "^0.12.2",
    "debug": "^4.1.1",
    "graphql": "^15.0.0",
    "graphql-type-json": "^0.3.1",
    "lodash": "^4.17.15",
    "moment": "^2.25.3",
    "node-gcm": "^1.0.2",
    "nodemailer": "^6.4.6",
    "paseto.js": "^0.1.6",
    "patch-package": "^6.2.2",
    "pg": "^8.2.0",
    "postinstall-postinstall": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "type-graphql": "^1.0.0-rc.1",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.24",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/debug": "^4.1.5",
    "@types/graphql-type-json": "^0.3.2",
    "@types/lodash": "^4.14.150",
    "@types/node-gcm": "^1.0.0",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "babel-eslint": "^10.1.0",
    "conventional-changelog-conventionalcommits": "^4.3.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-unused-imports": "^0.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.7",
    "supports-color": "^7.1.0",
    "typescript": "^3.9.2",
    "wait-on": "^5.0.0"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
